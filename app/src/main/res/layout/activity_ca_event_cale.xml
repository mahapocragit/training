<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.gov.pocra.training.activity.ps_hrd.dashboard.PsEventCaleActivity">

    <LinearLayout
        android:id="@+id/calLLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/eCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            app:mcv_dateTextAppearance="@style/CalenderTextAppearance"
            app:mcv_selectionColor="@color/colorAccent"
            app:mcv_tileHeight="35dp"
            app:mcv_tileWidth="match_parent"
            app:mcv_headerTextAppearance="@style/CalenderHeaderTextAppearance"
            app:mcv_weekDayTextAppearance="@style/CalenderWeekDayTextAppearance" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eCalenderRView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
