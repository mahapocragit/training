<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/memLLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/parti_list_border_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/memNameTView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:hint="Name"
                android:padding="5dp"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobileTView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:hint="Mobile"
                    android:padding="5dp"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/ageTView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:hint="Age"
                    android:padding="5dp"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>

            <TextView
                android:id="@+id/memDesigTView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:hint="Designation"
                android:padding="5dp"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trainingAttendTView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Training Attend"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/trainingCountTView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:hint="0"
                    android:padding="5dp"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/selectedView"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected_bg_green"
            android:visibility="invisible" />


        <!--<ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/check"
            android:tint="@color/bg_green"
            android:visibility="invisible" />-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>