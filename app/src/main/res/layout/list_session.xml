<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/rootLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/parti_list_border_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startTView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:hint="start Time"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_15" />


            <TextView
                android:id="@+id/endTView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:hint="End Time"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_15" />


            <ImageView
                android:id="@+id/removeIView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/ic_cancel"
                app:tint="@color/bg_red"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_15" />

        </LinearLayout>



        <TextView
            android:id="@+id/sessionDescTView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Description"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/resPerNameTView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Resource Person Name"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/resPerMobileTView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Resource Person Mobile"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_15" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>